<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Duration:</b>
  <%= @movie.duration %>
</p>

<p>
  <b>Director:</b>
  <%= @movie.director %>
</p>

<p>
  <b>Actors:</b>
  <%= @movie.actors %>
</p>

<p>
  <b>Overview:</b>
  <%= @movie.overview %>
</p>

<p>
	<b>Categories:</b>
	<% @movie.movie_categories.each do |movie_category| %>
		<%= movie_category.category.name %>
	<% end %>
</p>

<p>
	<b>Ratings</b>
	<% if ( @movie.rating && @movie.rating.image ) %>
		<%= image_tag( @movie.rating.image, :size => '140x53' ) %>
	<% end %>
</p>

<p>
  <b>Available:</b>
  <%= @movie.available %>
</p>


<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
