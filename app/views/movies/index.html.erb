
<div id="product_list">
  <h1>
    <% if @category %>
      <%= @category.name %>
    <% else %>
      All
    <% end %>
    Movies
  </h1>

<table>
<% if @movies %>
	<% @movies.each do |movie| %>
		<tr class="<%= cycle( 'list_line_odd', 'list_line_even' ) %>">
		  <td>
		  		<% if movie.image %>
		      	<%= image_tag( movie.image, :class => 'list_image' ) %>
		      <% end %>
		  </td>
		  <td>
		      <dl>
		        <dt><h2><%= movie.title %></h2></dt>
		        <dd>
		            <%= truncate( strip_tags( movie.overview ), :length => 80 ) %>
		            <br />
		            Duration: <%= movie.duration %>
		            Rating: <%= movie.rating %>
		            <br />
		            Director: <%= movie.director %> Actors:<%= movie.actors %>
		            <br />
		            <strong>Status</strong> <%= movie.available %>
		        </dd>
		      </dl>
		  </td>
		  
		  <td>
		      <%= link_to 'Show', movie %>
		      <%= link_to 'Edit', edit_movie_path(movie) %>
		      <%= link_to 'Destroy', movie,  :method => :delete %>
		  </td>
		</tr>
	<% end %>
<% end %>
</table>

<br />

<%= link_to 'New Movie', new_movie_path %>
</div>
