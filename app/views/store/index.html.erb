<% if notice %>
<p id="notice">
  <%= notice %>
</p>
<% end %>

<h1>Rails Video Depot</h1>

<% @movies.each do |movie| %>
<div class="entry">
  <%= link_to image_tag( movie.image ), cart_items_path(:movie_id => movie.id ), :method => :post %>
  <h3><%= link_to movie.title, "/movies/" + movie.id.to_s %></h3>
  <div>
    <%= sanitize( truncate( movie.overview , :length => 50, :omission => '...' ) ) %>
    <!-- This is not optimal -->
    <%= link_to "read more", "/movies/" + movie.id.to_s %>
  </div>
  <div class="price_line">
    <%= button_to 'Add to cart', cart_items_path(:movie_id => movie.id ) %>
  </div>
</div>
<% end  %>
