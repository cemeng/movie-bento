<!DOCTYPE html>
<html>
<head>
  <title>Video Depot</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "order" %>
  <%= stylesheet_link_tag "styles", :media => "all" %>

  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag( "logo.png") %>
    <%= @page_title || "Movie Depot" %>
  </div>

  <div id="columns">
    <div id="side">

      <table>
      <tr>
        <td><a href="/">Home</a></td>
      </tr>
      </table>

      <hr />
      <% if session[:user_id] %>

        <%= link_to 'Rent Orders'   , orders_path %> <br />
        <%= link_to 'Movies'        , movies_path %><br />
        <%= link_to 'Users'         , users_path %><br />

        <%= button_to "Logout", logout_path, :method => :delete %>

      <% else %>
          <% #need to work out on  how to get @cart and @category to persist everyhere %>

          <% if @cart %>
            <%= hidden_div_if( @cart.cart_items.empty? ,:id => "cart") do %>
                <%= render @cart %>
            <% end %>
          <% end %>

          <% if @categories %>
            <h2 style="color:white">Category</h2>
            <div id="category">
              <%= render @categories %>
            </div>
          <% end %>

      <% end %>

    </div>

  </div>

  <div id="main">
    <%= yield %>
  </div>

</body>
</html>
