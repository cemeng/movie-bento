<!DOCTYPE html>
<html>
<head>
  <title>Video Depot</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "styles", :media => "all" %>

  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag( "logo.png") %>
    <%= @page_title || "Movie Depot" %>
  </div>

  <div id="columns">
    <div id="side">
    	<table>
      <tr>
        <td><a href="">Home</a></td>
      </tr>
      <tr>
        <td><a href="">News</a></td>
      </tr>
      <tr>
        <td><a href="">Contact</a></td>
      </tr>
      </table>
      <hr />
      <div id="cart">
      	<%= render @cart %>
      </div>
      <h2 style="color:white">Category</h2>
      <div id="category">
      	<%= render @categories %>
      </div>
      
    </div>

  </div>

  <div id="main">
    <%= yield %>
  </div>

</body>
</html>
